<p id="notice"><%= notice %></p>

<h1>All Users</h1>

<table class="table table-striped table-bordered">
  <tr>
    <th class="center">Username</th>
    <th class="center">Email</th>
    <th class="center">Password</th>
    <th class="center">Action</th>

  </tr>
  <thead>
  </thead>

  <tbody>
    <% @user.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.password_digest %></td>
        <td>
        <%= link_to "Update",edit_user_path(user), class: "btn btn-link" %>
        <%= link_to "Delete",user, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-link" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add New User', signup_path, class: "btn btn-link" %>
