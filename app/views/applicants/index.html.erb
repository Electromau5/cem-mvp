<table class="table table-striped table-bordered">
  <tr>
    <th class="center">Seller</th>
    <th class="center">Email</th>
    <th class="center">Location</th>
    <th class="center">Description</th>
    <th class="center">Product types</th>
    <th class="center">Target Audience</th>
    <th class="center">Site</th>
  </tr>
<% @applicant.each do |applicant| %>
  <tr>
    <td><%= applicant.brand %></td>
    <td><%= applicant.email  %></td>
    <td><%= applicant.location  %></td>
    <td><%= truncate(applicant.description, length: 150)  %></td>
    <td><%= applicant.product %></td>
    <td><%= applicant.category %></td>
    <td><%= applicant.site %></td>

        </tr>
        <% end %>
        </table>

