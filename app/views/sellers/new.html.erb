<h1 style="text-align:center">Create a new Seller Account</h1>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
	<%= form_for @seller do |f| %>

	<%= f.label :sellername  %>
	<%= f.text_field :sellername, class: 'form-control' %>

	<%= f.label :email  %>
	<%= f.email_field :email, class: 'form-control' %>

	<%= f.label :storename %>
	<%= f.text_field :storename, class: 'form-control' %>

	<%= f.label :location %>
	<%= f.text_field :location, class: 'form-control' %>

	<%= f.label :description %> 
	<%= f.text_area :description, class: 'form-control' %><br />

	<%= f.submit 'Add Seller', class: 'btn btn-primary' %>

	<% end %>
</div>
</div>

