<h1 align="center">Edit your Seller Account</h1>
	
		<div class='row'>
			<div class='col-xs-12'>
				<%= form_for(@seller, :html => {class: "form-horizontal", role: "form"}) do |f| %>
					<% if @seller.admin? %>
					<div class="form-group">
						<div class="control-label col-sm-2">
							<%= f.label :brand %>
						</div>
							<div class="col-sm-8">
								<%= f.text_field :brand, class: "form-control", placeholder: "Enter brand", autofocus: true %>
							</div>
					</div>
					<div class="form-group">
								<div class="control-label col-sm-2">
									<%= f.label :password %>
								</div>
									<div class="col-sm-8">
										<%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
									</div>
							</div>
						<% end %>
						<div class="form-group">
							<div class="control-label col-sm-2">
								<%= f.label :email %>
							</div>
								<div class="col-sm-8">
									<%= f.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
								</div>
						</div>
							
								<div class="form-group">
									<div class="control-label col-sm-2">
										<%= f.label :location %>
									</div>
										<div class="col-sm-8">
											<%= f.text_field :location, class: "form-control", placeholder: "Where are you based", autofocus: true %>
										</div>
								</div>
									<div class="form-group">
										<div class="control-label col-sm-2">
											<%= f.label :description %>
										</div>
											<div class="col-sm-8">
												<%= f.text_area :description, class: "form-control", placeholder: "Describe your brand and products", autofocus: true %>
											</div>
									</div>

									<div class="form-group">
										<div class="control-label col-sm-2">
											<%= f.label :image, 'Your brand logo' %>
										</div>
											<div class="col-sm-8">
												<%= f.file_field :image, class: "form-control", autofocus: true %>
											</div>
									</div>
								<div class="form-group">
									<div class="col-sm-offset-2 col-sm-10">
										<%= f.submit "Edit", class: 'btn btn-primary btn-lg' %>
									</div>
								</div>
					<% end %>
						<div class="col-xs-4 col-xs-offset-4">
							[ <%= link_to "Cancel request and return to reviews", reviews_path %> ]
						</div>
			</div>
		</div>
	