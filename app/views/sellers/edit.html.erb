<h1 align="center" style="font-family: 'SubtleSansLight', sans-serif">Edit your Seller Account</h1>
	
		<div class='row'>
			<div class='col-xs-12'>
				<%= form_for(@seller, :html => {class: "form-horizontal", role: "form"}) do |f| %>
					<% if @seller.admin? %>
					<div class="form-group">
						<div class="login">
						<div class="control-label col-sm-2">
							<%= f.label :brand, 'Seller Id' %>
						</div>
					</div>
							<div class="col-sm-8">
								<%= f.text_field :brand, class: "form-control", placeholder: "Enter seller name", autofocus: true %>
							</div>
					</div>
					<div class="form-group">
						<div class="login">
								<div class="control-label col-sm-2">
									<%= f.label :password %>
								</div>
						</div>
									<div class="col-sm-8">
										<%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
									</div>
							</div>
						<% end %>
						<div class="form-group">
							<div class="login">
							<div class="control-label col-sm-2">
								<%= f.label :email %>
							</div>
						</div>
								<div class="col-sm-8">
									<%= f.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
								</div>
						</div>
							
								<div class="form-group">
								<div class="login">
									<div class="control-label col-sm-2">
										<%= f.label :location %>
									</div>
								</div>
										<div class="col-sm-8">
											<%= f.text_field :location, class: "form-control", placeholder: "Where are you based", autofocus: true %>
										</div>
								</div>
									<div class="form-group">
										<div class="login">
										<div class="control-label col-sm-2">
											<%= f.label :description %>
										</div>
									</div>
											<div class="col-sm-8">
												<%= f.text_area :description, class: "form-control", placeholder: "Describe your brand and products", autofocus: true %>
											</div>
									</div>

									<div class="form-group">
										<div class="login">
										<div class="control-label col-sm-2">
											<%= f.label :image, 'Your brand logo' %>
										</div>
									</div>
											<div class="col-sm-8">
												<%= f.file_field :image, class: "form-control", autofocus: true %>
											</div>
									</div>
								
						<div class="login" style="margin-left:100px" >
									<%= f.submit 'Edit Account', class: "btn btn-primary" %>
								</div>
									<div class="login">
										<%= link_to 'Cancel', root_path %>	
									</div>
						<% end %>
			</div>
		</div>
	