<table class="table table-striped table-bordered">
  <tr>
    <th class="center">Brand</th>
    <th class="center">Email</th>
    <th class="center">Location</th>
    <th class="center">Description</th>
    <th class="center">Action</th>
  </tr>
<% @seller.each do |seller| %>
  <tr>
    <td><%= seller.brand %></td>
    <td><%= seller.email if seller.email %></td>
    <td><%= seller.location if seller.location %></td>
    <td><%= truncate(seller.description, length: 50) if seller.description %></td>
    <td>
      <div class="btn-group">
        <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Action<span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
        <li><%= link_to "View",seller, class: "btn btn-link" %></li>
        <li><%= link_to "Edit",edit_seller_path(seller), class: "btn btn-link" %></li>
        <li><%= link_to "Delete",seller, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-link" %></li>
        </ul>
        </div>
        </td>
        </tr>
        <% end %>
        </table>

