<h1>Featured Product List</h1>
<table class="table table-striped table-bordered">
  <tr>
    <th class="center">Image</th>
    <th class="center">Name</th>
    <th class="center">Price</th>
    <th class="center">Action</th>
  </tr>
<% @product.each do |product| %>
  <tr>
    <td><%= image_tag product.image.url(:thumb) %></td>
    <td><%= truncate(product.name, length: 50) %></td>
    <td><%= number_to_currency(product.price) %></td>
    <td>
      <div class="btn-group">
        <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Action<span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
        <li><%= link_to "View",product, class: "btn btn-link" %></li>
        <li><%= link_to "Edit",edit_product_path(product), class: "btn btn-link" %></li>
        <li><%= link_to "Delete",product, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-link" %></li>
        </ul>
        </div>
        </td>
        </tr>
        <% end %>
        </table>

