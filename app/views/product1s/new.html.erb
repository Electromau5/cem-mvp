<h1 style="text-align:center">Create a new Product review for 3d Printers</h1>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for @product1 do |f| %>
	
			<%= f.label :title %>
			<%= f.text_field :title, class: 'form-control' %>

			<h2>Review:</h2>

			<%= f.label :feature1, 'Print Quality'  %>
			<%= f.text_area :feature1, class: 'form-control' %>

			<%= f.label :feature2, 'Ease of Use' %>
			<%= f.text_area :feature2, class: 'form-control' %>

			<%= f.label :feature3, 'Reliability' %>
			<%= f.text_area :feature3, class: 'form-control' %>

			<%= f.label :feature4, 'Running Expenses' %>
			<%= f.text_area :feature4, class: 'form-control' %>

			<%= f.label :feature5, 'Value for Money' %>
			<%= f.text_area :feature5, class: 'form-control' %>

			<h2>Specifications:</h2>

			<%= f.label :spec1, 'Printer Type' %>
			<%= f.text_field :spec1, class: 'form-control' %>

			<%= f.label :spec2, 'Material'%>
			<%= f.text_field :spec2, class: 'form-control' %>

			<%= f.label :spec3, 'Dimensions' %>
			<%= f.text_field :spec3, class: 'form-control' %>

			<%= f.label :spec4, 'On Printer Controls' %>
			<%= f.text_field :spec4, class: 'form-control' %>

			<%= f.label :spec5, 'Extruder Head' %>
			<%= f.text_field :spec5, class: 'form-control' %><br />

			<%= f.submit 'Add your review', class: 'btb btn-primary btn-lg'  %>
		<% end %>
	</div>
</div>


