<%= link_to 'Back', product1s_path, class: "btn btn-default" %>
<div class = "container-fluid">
	<div class = "row">
		<div class="col-xs-12 col-md-5">
			<%= image_tag @product1.image.url(:large) %>
  				<div class = "post_show_title">
			  	  <p><%= @product1.title %></p>
		        </div>
      </div>
      <div class="col-xs-12 col-md-4">
              <% if logged_in? && current_user.admin %>
              <h2>Ratings</h2>
                <%= @product1.spec1 %> : <%= rating_for @product1, "print_quality", :star_on => "blue-star.png", :star_off => "white-star.png", :disable_after_rate => true %><br />
                
                Ease of Use and Setup: <%= rating_for @product1, "ease_of_use", :disable_after_rate => true , :star_on => "blue-star.png", :star_off => "white-star.png" %><br />

                Reliability: <%= rating_for @product1, "reliability", disable_after_rate: true, :star_on => "blue-star.png", :star_off => "white-star.png"  %><br />
                
                Running Expenses: <%= rating_for @product1, "running_expenses", disable_after_rate: true, :star_on => "blue-star.png", :star_off => "white-star.png"  %><br />
                
                Value for Money: <%= rating_for @product1, "value_for_money", disable_after_rate: true, :star_on => "blue-star.png", :star_off => "white-star.png"  %><br />
                <% end %>
      </div>
       <div class="col-xs-12 col-md-3">
          <h2>Specifications</h2>
          <h4>Printer Type</h4>
          <p><%= @product1.spec1 %></p>
          <h4>Material</h4>
          <p><%= @product1.spec2 %></p>
          <h4>Build Volume</h4>
          <p><%= @product1.spec3 %></p>
          <h4>On Printer Controls</h4>
          <p><%= @product1.spec4 %></p>
          <h4>Extruder Head</h4>
          <p><%= @product1.spec5 %></p>
      </div>
            <div class="col-xs-12 col-md-12">
		        	<h2> Review </h2>
		          <h3>Print Quality: </h3>
  			      <p><%= @product1.feature1 %></p>
  			      <h3>Ease of Use and Setup: </h3>
  			      <p><%= @product1.feature2 %></p>
  			      <h3>Reliability</h3>
  			      <p><%= @product1.feature3 %></p>
  			      <h3>Running Expenses</h3>
  			      <p><%= @product1.feature4 %></p>
  			     	<h3>Value for Money</h3>
  			      <p><%= @product1.feature5 %></p>
  			   </div>
	</div>
</div>