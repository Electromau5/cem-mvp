<div class = "container">
	<div class = "jumbotron">
		<div class = "row">
			<div class = "col-md-6">
					<%= image_tag @listing.image2.url(:medium), :data => { zoom_image: @listing.image2.url(:large) }, :class => "zoom" %>
						<div class ="row">
							<div class = "col-md-10 col-xs-6">
								<div id="gallery">
								 
								 <%= link_to image_tag(@listing.image2.url(:thumb)), '#', data: { image: @listing.image2.url(:medium), zoom_image: @listing.image2.url(:large) }, :class => 'zoom2' if @listing.image2? %>
								 
								 <%= link_to image_tag(@listing.image3.url(:thumb)), '#', data: { image: @listing.image3.url(:medium), zoom_image: @listing.image3.url(:large) }, :class => 'zoom2' if @listing.image3?  %>
								 
								 <%= link_to image_tag(@listing.image4.url(:thumb)), '#', data: { image: @listing.image4.url(:medium), zoom_image: @listing.image4.url(:large) }, :class => 'zoom2' if @listing.image4?  %>
								 
								 <%= link_to image_tag(@listing.image5.url(:thumb)), '#', data: { image: @listing.image5.url(:medium), zoom_image: @listing.image5.url(:large) }, :class => 'zoom2' if @listing.image5?  %>

								</div>
							</div>
								
						</div>
				</div>			
							
					<div class = "col-md-6">
						<div class = "listing_set_1">
							<div class="title" style="font-weight:bold;font-size:20px">
								Product Name: <br/>
							</div>
								<div clas="fill" style="font-size:18px">
									<%= @listing.name %><br /><br />
								</div>
						</div>
								<div class="title" style="font-weight:bold;font-size:20px">
									Features: <br/>
								</div>
									<%= @listing.feature1 %><br /><br />
									<%= @listing.feature2 %><br /><br />
									<%= @listing.feature3 %><br /><br />
										<span style="font-size:25px;border:1px solid #008ac1;padding:6px">
											â‚¹ <%= @listing.price %>
										</span><br /><br />
									This item can be bought <%= link_to 'here', "#{@listing.site}" %><br /><br />
					   </div>
					   	
							<div class = "col-md-4">
								<% if (logged_in? && current_seller == @listing.seller) %>
								<%= link_to 'Edit', edit_listing_path(@listing), class: "btn btn-default" %>
								<%= link_to 'Delete', listing_path(@listing), method: :delete, data: { confirm: "Are you sure you want to delete this listing"}, class: "btn btn-default" %>
							
						<% end %>
							<%= link_to 'More from this brand', @listing_seller, class: "btn btn-success" %>
						</div>
				</div>
			</div>
		</div>

		